{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "stores/*": ["src/stores/*"],
      "src/*": ["src/*"]
    },
    "types": ["jest"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist"
  },
  "include": ["src", "tests"]
}
